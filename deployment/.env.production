# openSUSE Leap サーバー用環境設定

# データベース設定 (PostgreSQL本番環境用)
DATABASE_URL=postgresql://ready_to_study:password@localhost:5432/ready_to_study_db

# サーバー設定
SERVER_HOST=0.0.0.0
SERVER_PORT=8501
DEBUG=False

# アプリケーション設定
APP_NAME=Ready to Study
APP_VERSION=1.0.0
ENVIRONMENT=production

# セキュリティ設定
SECRET_KEY=your-secret-key-here
ENABLE_HTTPS=True
SSL_CERT_PATH=/etc/ssl/certs/ready-to-study.crt
SSL_KEY_PATH=/etc/ssl/private/ready-to-study.key

# ログ設定
LOG_LEVEL=INFO
LOG_FILE=/var/log/ready-to-study/app.log

# バックアップ設定
BACKUP_DIR=/var/backups/ready-to-study
BACKUP_RETENTION_DAYS=30

# リソース制限
MAX_UPLOAD_SIZE=10MB
MAX_CONCURRENT_USERS=100
